{
    "compilerOptions": {
      "incremental": true,
      "outDir": "dist",
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "types": [
        "mocha",
        "node"
      ]
    },
    "include": [
        "**/*.ts",
        "**/*.spec.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
  }
